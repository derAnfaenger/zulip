<b>Discussment widget</b>
<br />
<h6>add idea</h6>
<input type="text" class="poll-comment" value="{{my_comment}}" />
<button class="poll-comment">submit</button>
<br />
<ul class="poll-widget">
    {{#each comments}}
        <li>
            <button class="poll-vote" data-key="{{ key }}">
                {{ count }}
            </button>
            {{ comment }}
            {{#if names}}
                ({{ names }})
            {{/if}}
        </li>
    {{/each}}
</ul>
